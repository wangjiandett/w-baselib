<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="分享文本"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_share_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="分享文件"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_share_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="分享多文件"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_share_text_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="分享文本到qq"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_share_file_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="分享文件到qq"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_share_text_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="分享文本到微信"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_share_file_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="分享文件到微信"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>

