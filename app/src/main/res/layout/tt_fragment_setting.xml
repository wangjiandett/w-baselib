<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F2F2F2"
    android:divider="@drawable/tt_list_divider"
    android:orientation="vertical"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/tv_head_icon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/normal_text_color"
            android:textSize="16sp"
            android:text="@string/header_icon" />

        <ImageView
            android:id="@+id/iv_head_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/avatar_placeholder_round"
            android:layout_toStartOf="@+id/iv_end_icon" />

        <ImageView
            android:id="@+id/iv_end_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@mipmap/arrow_right" />

    </RelativeLayout>

    <com.moa.rxdemo.weiget.SettingItemView
        android:id="@+id/nick_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="15dp"
        android:paddingEnd="15dp" />

    <com.moa.rxdemo.weiget.SettingItemView
        android:id="@+id/modify_pwd_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="15dp"
        android:paddingEnd="15dp" />

    <com.moa.rxdemo.weiget.SettingItemView
        android:id="@+id/cancellation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="15dp"
        android:paddingEnd="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@color/list_divider" />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="@color/color_888888"
        android:background="@drawable/tt_list_item_selector"
        android:gravity="center"
        android:text="@string/logout_title" />

</LinearLayout>
