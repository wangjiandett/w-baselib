<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_grading_info"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_above="@+id/ll_bottom_bar"
    android:layout_below="@+id/rl_title_bar"
    android:layout_alignParentEnd="true"
    android:fillViewport="true"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="214dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_grading_info"
            android:layout_width="196dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_student_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="7dp">

                <ImageView
                    android:id="@+id/iv_head_icon"
                    android:layout_width="34dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/avatar_placeholder_rectangle"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/iv_head_icon"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/normal_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_grading_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/iv_head_icon"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_888888"
                    android:textSize="13sp" />

            </RelativeLayout>

            <View
                android:id="@+id/v_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/rl_student_info"
                android:background="@color/grading_divider" />

            <TextView
                android:id="@+id/tv_grading_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_divider"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_grading_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_grading_name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_grading_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_grading_duration"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:maxLength="80"
                android:ellipsize="end"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_grading_pic"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_below="@+id/tv_grading_desc"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/grading_test_subject"
                android:visibility="gone" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/tv_hide_student_info"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="-18dp"
            android:onClick="onClick"
            android:src="@mipmap/grading_info_visible_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/tv_show_student_info"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="start|center_vertical"
            android:onClick="onClick"
            android:src="@mipmap/grading_info_gone_icon"
            android:visibility="gone" />

    </RelativeLayout>

</ScrollView>