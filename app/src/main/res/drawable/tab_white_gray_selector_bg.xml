<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">   <!-- 按钮未点击-->
        <shape>
            <solid android:color="@color/white" /> <!-- 填充的颜色：这里设置背景透明 -->
            <corners android:radius="2dip" /> <!-- android:radius 弧形的半径 -->
            <stroke
                android:width="1dp"
                android:color="@color/color_888888" />
        </shape>
    </item>

    <item android:state_checked="true">  <!-- 按钮选中状态-->
        <shape>
            <solid android:color="@color/color_707070" /> <!-- 填充的颜色：这里设置背景透明 -->
            <corners android:radius="2dip" /> <!-- android:radius 弧形的半径 -->
            <stroke
                android:width="1dp"
                android:color="@color/color_888888" />
        </shape>
    </item>
</selector>